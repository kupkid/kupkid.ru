:80 {
    root * /usr/share/caddy
    file_server
    encode gzip
    
    # API proxy to Python server
    handle_path /api/* {
        reverse_proxy localhost:8081
    }
    
    # Cache static assets
    header /assets/* {
        Cache-Control "public, max-age=3600"
    }
    
    # Security headers
    header {
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
    }
}

# HTTPS (when you have domain)
# :443 {
#     root * /usr/share/caddy
#     file_server
#     encode gzip
#     tls your@email.com
# }
